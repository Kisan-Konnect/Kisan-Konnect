<%- include('partials/menu', {req:req}); %>
<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <% var text; var link; if(role == 'buyer'){ text = "Welcome Buyer";
      link="/buyer/login"; }else if(role == 'farmer'){ text = "Welcome Farmer";
      link="/farmer/login"; } %>
      <h1 style="align-self: center"><%= text %></h1>
      <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i> Login</h1>
      <%- include ("./partials/messages") %>
      <form action="<%= link %>" method="POST">
        <div class="form-group">
          <label for="number">Phone Number</label>
          <input
            type="number"
            id="number"
            name="number"
            class="form-control"
            placeholder="Enter Phone Number"
          />
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Enter Password"
          />
        </div>
        <button type="submit" class="btn btn-primary btn-block">Login</button>
      </form>
      <p class="lead mt-4">
        <% if(role == 'buyer') {link = "/buyer/register"}else if(role ==
        'farmer'){link = "/farmer/register"} %> No Account?
        <a href="<%= link %>">Register</a>
      </p>
    </div>
  </div>
</div>
