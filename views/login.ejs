<%- include('partials/menu', {req:req}); %>
<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <% var text; if(role == 'buyer'){ text = "Welcome Buyer" }else if(role == 'farmer'){ text = "Welcome Farmer" } else if(role == 'moderator') { text = "Welcome Moderator" } %>
      <h1 style="align-self: center"><%= text %></h1>
      <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i> Login</h1>
      <%- include ("./partials/messages") %>
      <form action="/<%= role %>/login" method="POST">
        <div class="form-group">
          <label for="number">Phone Number</label>
          <input
            type="number"
            id="number"
            name="number"
            class="form-control"
            placeholder="Enter Phone Number"
          />
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Enter Password"
          />
        </div>
        <button type="submit" class="btn btn-success btn-block">Login</button>
      </form>
      <p class="lead mt-4">
        Don't have an account?
        <a href="/<%= role %>/register">Register</a>
      </p>
    </div>
  </div>
</div>
