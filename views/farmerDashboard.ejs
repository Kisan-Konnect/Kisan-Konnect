<%- include('partials/menu', {req:req}); %>
<h1 class="mt-4"><%=history%></h1>
<% if(crops.length > 0){%>
  <table>
    <tr>
      <th>Crop Name</th>
      <th>Quantity</th>
      <th>Price</th>
      <% if(history != "Current Listings") { %> 
        <th>Buyer Name</th>
      <% } %> 
      <th>Age</th>
      <% if(history == "Current Listings") { %> 
        <th>Delete</th>
      <% } %> 
    </tr>
    <% for(var i=0; i < crops.length; i++) { %>
    <tr>
      <td><%= crops[i].name %></td>
      <td><%= crops[i].quantity %></td>
      <td><%= crops[i].price %></td>
      <% if (crops[i].buyerName){ %> 
        <td><%= crops[i].buyerName %> </td>
      <% } %> 
      
      <td>
        <% if (Math.floor((new Date() - crops[i].date) / 1000) / 31536000 > 1) { %>
          <%=Math.floor(Math.floor((new Date() - crops[i].date) / 1000) / 31536000) + " year(s) ago"%>
        <% } else if (Math.floor((new Date() - crops[i].date) / 1000) / 2592000 > 1) { %>
          <%=Math.floor(Math.floor((new Date() - crops[i].date) / 1000) / 2592000) + " month(s) ago"%>
        <% } else if (Math.floor((new Date() - crops[i].date) / 1000) / 86400 > 1) { %>
          <%=Math.floor(Math.floor((new Date() - crops[i].date) / 1000) / 86400) + " day(s) ago"%>
        <% } else if (Math.floor((new Date() - crops[i].date) / 1000) / 3600 > 1) { %>
          <%=Math.floor(Math.floor((new Date() - crops[i].date) / 1000) / 3600) + " hour(s) ago"%>
        <% } else if (Math.floor((new Date() - crops[i].date) / 1000) / 60 > 1) { %>
          <%=Math.floor(Math.floor((new Date() - crops[i].date) / 1000) / 60) + " minute(s) ago"%>
        <% } else{%>
          <%=Math.floor((new Date() - crops[i].date) / 1000) + " second(s) ago"%>
        <% }%>
      </td>
      <% if(history == "Current Listings") { %> 
        <td>
          <% var link = "/farmer/deleteCurrent/" + crops[i]._id %>      
          <a href="<%=link %>" class="btn btn-primary btn-block">Delete</a>
        </td>
        <td>
          <% var link = "/farmer/editlisting/" + crops[i]._id.toString() %>      
          <a href="<%=link %>" class="btn btn-primary btn-block">Edit</a>
        </td>

        
      <% } %> 
      <% if(history=="Dashboard" && !crops[i].sent)  {%> 
        <td>
          <% var link = "/farmer/sent/" + crops[i]._id %>      
          <a href="<%=link %>" class="btn btn-primary btn-block">Send Order</a>
        </td>
      <% } %>
    </tr>
    <% } %>
  </table>
<% } else{ %> 
  <h2>No buyers are interested in your Listings.</h2>
  <h4>Try adding more Listings, or reduce your price.</h4>
<%} %>

