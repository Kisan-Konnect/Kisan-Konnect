<%- include('partials/menu', {req:req}); %>

<link
  href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css"
  rel="stylesheet"
  integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6"
  crossorigin="anonymous"
/>
<!-- JavaScript Bundle with Popper -->
<script
  src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js"
  integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf"
  crossorigin="anonymous"
></script>

<link rel="stylesheet" href="../css/styles.css">
<div style="text-align: center;">
  <br> </p>
  <h1 >Complaints</h1>
  <br> </p>
  <% if(complaints.length === 0){ %>
    <br> </p>
    <h3>The community is in harmony!!!</h3>
  <% } %>
</div>
<% var clas = 'card-img-top img-responsive center' %>
<% var styles = 'height:200px; overflow:hidden;' %>
<div >
  <% for(var i=0; i < complaints.length; i++) { %>
    <div class="dummy">
    <div class="roww">
        <div class="box1">
          <div class="card-body">
            <h5 class="card-title">Crop</h5>
            <img src="data:image/png;base64,<%= complaints[i].crop.image %>" alt="Crop Image" class="<%=clas%>" style="<%=styles%>"/> <br> </p>
            <p class="card-text">Name: <%=complaints[i].crop.name%> <br> </p>
            <p class="card-text">Price: <%=complaints[i].crop.price%> <br> </p>
            <p class="card-text">Quantity: <%=complaints[i].crop.quantity%> <br> </p>
          </div>
          <div class="card-footer">
            <p class='card-text'>Age: <%=findHumanAge(complaints[i].crop.date)%></p>
          </div>
        </div>
        <div class="box1">
          <div class="card-body">
            <h5 class="card-title">Complainant</h5>
            <p class="card-text">Name: <%=complaints[i].complainant.name%> <br> </p>
            <p class="card-text">Role: <%=complaints[i].complainant.role%> <br> </p>
            <p class="card-text">Contact: <%=complaints[i].complainant.number%> <br> </p>
            <p class="card-text">Address: <%=complaints[i].complainant.address%> <br> </p>
          </div>
          <div class="card-footer">
            <p>Account Age: <%=findHumanAge(complaints[i].complainant.date)%>            
          </div>
        </div>
        <div class="box1">
          <div class="card-body">
            <h5 class="card-title">Complainee</h5>
            <p class="card-text">Name: <%=complaints[i].complainee.name%> <br> </p>
            <p class="card-text">Role: <%=complaints[i].complainee.role%> <br> </p>
            <p class="card-text">Contact: <%=complaints[i].complainee.number%> <br> </p>
            <p class="card-text">Address: <%=complaints[i].complainee.address%> <br> </p>
            </div>
            <div class="card-footer">
              <p>Account Age: <%=findHumanAge(complaints[i].complainee.date)%></p>
          </div>
        </div>
        <div class="box1">
          <div class="card-body">
            <h5 class="card-title">Complaint</h5>
            <p class="card-text"><%=complaints[i].complaint.reason%> <br> </p>
          </div>
          <div class="card-footer">
            <p>Complaint Age: <%=findHumanAge(complaints[i].complaint.date)%></p>
        </div>
        </div>
    </div>
    <div class='buttonbox'>
    <% var link = "/moderator/warn/" + complaints[i].complaint._id %>
    <a href="<%=link %>" class="btn btn-danger btn-lg buybutton mb-2">Warn</a>
    <% var link = "/moderator/dismiss/" + complaints[i].complaint._id %>
    <a href="<%=link %>" class="btn btn-success btn-lg buybutton mb-2">Dismiss</a>
    </div>
  </div>
  <hr>
  <% } %>
</div>

