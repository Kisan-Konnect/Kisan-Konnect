<%- include('partials/menu', {req:req}); %>
<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3">
        <img
          src="https://static.thenounproject.com/png/514081-200.png"
          alt="Farmer Logo"
          style="align-self: center; width: 20%"
        />
      </h1>
      <form action="/<%= req.user.role %>/raisecomplaint/<%= crop.cropID %>" method="POST">
        <div class="form-group">
          <label for="name">Name of User</label>
          <input
            type="name"
            id="username"
            name="username"
            class="form-control form-control-lg"
            placeholder="Enter Name of User"
            value="<%= user.name %>"
            disabled
          />
        </div>
        <div class="form-group">
          <label for="name">Name of Crop</label>
          <input
            type="name"
            id="cropname"
            name="cropname"
            class="form-control form-control-lg"
            placeholder="Enter Name of Crop"
            value="<%= crop.name %>"
            disabled
          />
        </div>
        <div class="form-group">
          <label for="complaint">Complaint</label>
          <textarea
            type="complaint"
            id="complaint"
            name="complaint"
            class="form-control"
            placeholder="Enter Your Complaint"
          ><%= typeof complaint != 'undefined' ? complaint : '' %></textarea>
        </div>
        <button type="submit" class="btn btn-primary btn-block">
          Submit Complaint
        </button>
      </form>
    </div>
  </div>
</div>
